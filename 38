programa {
  funcao inicio() {
    real media, nota, contador, contador2
    contador = 0
    contador2 = 0
    escreva("digite a sua nota, e para parar digite -1\n")
    enquanto(nota != -1){
       leia(nota)
        se(nota>=1){
          contador2 = contador2 + 1
        }
       se(nota >+7.0){
        contador = contador +1

       }media = nota / contador2
    }escreva("alunos com uma nota maior que 7 e ", contador, "\n")
    escreva(" a media da turma e: \n", contador2)
}
}
