programa {
  funcao inicio() {
    real valorhoradetrabalho, horasextras, valorextra
    escreva("escreva o valor da sua hora de trabalho: ")
    leia(valorhoradetrabalho)
    escreva("escreva a quantidade das horas extras:  ")
    leia(horasextras)
    valorextra = (valorhoradetrabalho / horasextras) /2
    escreva("o valor extra que voce deve recebaer e: ", valorextra)
  }
}
